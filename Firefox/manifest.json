{
  "manifest_version": 2,
  "name": "YouTube Link Cleaner",
  "version": "2.0.0",
  "description": "Remove unnecessary parameters from YouTube URLs, keeping only video ID and timestamp.",
  "author": "raspberrykitty1",
  "permissions": ["contextMenus", "clipboardWrite", "activeTab"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-link-cleaner-1e2f3d4c-5b6a-7890-1234-56789abcdef0@myextensions.com"
    }
  }
}
